{
    "$schema": "https://raw.githubusercontent.com/microsoft/vscode-copilot/main/schemas/copilot-agent.schema.json",
    "name": "Autonomous Debug Agent",
    "description": "Vollautomatisches Debugging-System f√ºr Migraine Tracker PWA mit MCP Tools",
    "version": "1.0.0",
    "publisher": "migraine-tracker",
    "categories": [
        "Testing",
        "Debugging",
        "Code Analysis"
    ],
    "activationEvents": [
        "onCommand:migraineTracker.autonomousDebug",
        "onCommand:migraineTracker.analyzeCode",
        "onCommand:migraineTracker.scanErrors",
        "onCommand:migraineTracker.liveDebug"
    ],
    "contributes": {
        "commands": [
            {
                "command": "migraineTracker.autonomousDebug",
                "title": "ü§ñ Autonomous Debug: Problem l√∂sen",
                "category": "Migraine Tracker"
            },
            {
                "command": "migraineTracker.analyzeCode",
                "title": "üîç Code analysieren (TypeScript + ESLint)",
                "category": "Migraine Tracker"
            },
            {
                "command": "migraineTracker.scanErrors",
                "title": "üìä Runtime Errors scannen",
                "category": "Migraine Tracker"
            },
            {
                "command": "migraineTracker.liveDebug",
                "title": "üé≠ Live Browser Debugging",
                "category": "Migraine Tracker"
            },
            {
                "command": "migraineTracker.fixCode",
                "title": "üõ†Ô∏è Code Fix generieren",
                "category": "Migraine Tracker"
            }
        ],
        "keybindings": [
            {
                "command": "migraineTracker.autonomousDebug",
                "key": "ctrl+shift+d",
                "mac": "cmd+shift+d"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "migraineTracker.autonomousDebug",
                    "when": "editorFocus"
                },
                {
                    "command": "migraineTracker.analyzeCode",
                    "when": "editorFocus"
                },
                {
                    "command": "migraineTracker.scanErrors"
                },
                {
                    "command": "migraineTracker.liveDebug"
                }
            ],
            "editor/context": [
                {
                    "command": "migraineTracker.autonomousDebug",
                    "group": "1_debug@1"
                },
                {
                    "command": "migraineTracker.analyzeCode",
                    "group": "1_debug@2"
                }
            ]
        }
    },
    "main": "./out/extension.js",
    "engines": {
        "vscode": "^1.85.0"
    }
}